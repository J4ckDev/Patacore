<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height_ped"
    android:id="@+id/menuCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height_ped"
        android:orientation="horizontal"
        android:background="@color/colorSecondary">
        <ImageView
            android:id="@+id/img_card"
            android:layout_width="@dimen/img_card"
            android:layout_height="@dimen/img_card"
            android:background="@drawable/macet"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnPrep"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_height_btn"
                android:text="@string/textPed"
                android:background="@color/colorSecondary"
                android:textColor="@color/colorPrimary"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
               >
                <TextView
                    android:id="@+id/textDateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textdate_card"
                    android:textColor="@color/colorBG"
                    android:textSize="@dimen/secondstitle_Card"/>

                <TextView
                    android:id="@+id/textDatActCard"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/textdatact_card"
                    android:textColor="@color/colorBG"
                    android:textSize="@dimen/date_card"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

