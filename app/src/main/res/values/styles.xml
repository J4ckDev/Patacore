<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- estilo del boton del login. -->
    <style name="ButtonDarkLogin" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <!-- Customize your theme here. -->
    <style name="EditTextLogin" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint"></item>

        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColorPrimary"></item>
        <item name="colorAccent"></item>
        <item name="colorControlNormal"></item>
        <item name="colorControlActivated"></item>
    </style>
    <!-- Estilo black menu. -->
    <style name="EditTextBlack" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/editTextColorBlack</item>
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColorPrimary">@color/editTextColorBlack</item>
        <item name="colorAccent">@color/editTextColorBlack</item>
        <item name="colorControlNormal">@color/editTextColorBlack</item>
        <item name="colorControlActivated">@color/editTextColorBlack</item>
    </style>


</resources>
