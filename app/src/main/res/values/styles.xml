<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- estilo del boton del login. -->
    <style name="ButtonDarkLogin" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/PrimaryLightHighlight</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <!-- Customize your theme here. -->
    <style name="EditTextLogin" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBG</item>
        <item name="android:textColorHint">@color/colorBG</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/PrimaryLightHighlight</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textColorPrimary">@color/colorPrimaryLight</item>
    </style>
    <!--Color icono login-->
    <style name="IconLoginColor" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/colorSecondary</item>
    </style>
    <!--Colores cajas de texto agregar y actualiar plato-->
    <style name="EditTextAU" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
    </style>
    <!--Divisor Horizontal y vertical-->
    <style name="Divider">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>
    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditTextPed" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/PrimaryLightHighlight</item>
        <item name="android:textColorPrimary">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/PrimaryLightHighlight</item>
    </style>

</resources>
